<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/activity_desktop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.webonise.assetmanager.Activity.DesktopSpecificActivity">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTag"
                style="@style/inputFont"
                android:hint="@string/hint_tag" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editBrand"
                style="@style/inputFont"
                android:hint="@string/hint_brand" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_serialNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editSerial"
                style="@style/inputFont"
                android:hint="@string/hint_serialNo" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editOwner"
                style="@style/inputFont"
                android:hint="@string/hint_owner" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_processor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editProcessor"
                style="@style/inputFont"
                android:hint="@string/hint_processor" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_ramSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/editRamSize"
                    android:inputType="numberDecimal"
                    style="@style/inputFont"
                    android:hint="@string/hint_ramSize" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_ramQuantitySize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <EditText
                    android:id="@+id/editRamQuantitySize"
                    style="@style/inputFont"
                    android:inputType="numberDecimal"
                    android:hint="@string/hint_ramQuantitySize" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_ramQuantityCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <EditText
                    android:id="@+id/editRamQuantityCount"
                    style="@style/inputFont"
                    android:inputType="numberDecimal"
                    android:hint="@string/hint_ramQuantityCount" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_hdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editHdd"
                style="@style/inputFont"
                android:inputType="numberDecimal"
                android:hint="@string/hint_hdd" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_macWifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editMacWifi"
                style="@style/inputFont"
                android:hint="@string/hint_macWifi" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_macLan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editMacLan"
                style="@style/inputFont"
                android:hint="@string/hint_macLan" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/txtOsType"
            style="@style/codeFont"
            android:hint="@string/hint_os" />

        <Spinner
            android:id="@+id/spinnerOSType"
            style="@style/spinnerStyle"
            android:entries="@array/os_array" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_osKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editOsKey"
                style="@style/inputFont"
                android:hint="@string/hint_osKey"
                android:visibility="invisible" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_osVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editOsVersion"
                style="@style/inputFont"
                android:hint="@string/hint_osVersion"
                android:visibility="invisible" />
        </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnSaveDevice"
                style="@style/buttonFont"
                android:layout_weight="1"
                android:text="@string/btn_saveDevice" />
    </LinearLayout>
</ScrollView>
