<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.webonise.assetmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.LoginActivity" />
        <activity
            android:name=".Activity.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.AssetManagerActivity"
            android:label="@string/title_activity_asset_manager"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.AssetTypeSelectorActivity"
            android:parentActivityName=".Activity.AssetManagerActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <activity
            android:name=".Activity.MonitorActivity"
            android:parentActivityName=".Activity.AssetTypeSelectorActivity"></activity>
        <activity
            android:name=".Activity.KeyboardActivity"
            android:parentActivityName=".Activity.AssetTypeSelectorActivity" />
        <activity
            android:name=".Activity.MouseActivity"
            android:parentActivityName=".Activity.AssetTypeSelectorActivity" />
        <activity
            android:name=".Activity.ThinkpadActivity"
            android:parentActivityName=".Activity.AssetTypeSelectorActivity" />
        <activity
            android:name=".Activity.MacActivity"
            android:parentActivityName=".Activity.AssetTypeSelectorActivity" />
        <activity
            android:name=".Activity.CPUActivity"
            android:parentActivityName=".Activity.AssetTypeSelectorActivity" />
        <activity
            android:name=".Activity.CableActivity"
            android:parentActivityName=".Activity.AssetTypeSelectorActivity"></activity>
    </application>

</manifest>